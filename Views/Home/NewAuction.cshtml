@model NewAuctionViewModel

@{
    ViewData["Title"] = "New Auction";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemName"></label>
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartingBid"></label>
                <input asp-for="StartingBid" class="form-control" />
                <span asp-validation-for="StartingBid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemDetails"></label>
                <input asp-for="ItemDetails" class="form-control" />
                <span asp-validation-for="ItemDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Create Auction</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
